
CREATE TABLE CONDOMINIO(
	COD_CONDOMINIO INT NOT NULL AUTO_INCREMENT,
    ID_CONDOMINIO VARCHAR(80),
    QTD_PREDIOS_CONDOMINIO INT,
    CUSTO_MENSAL_CONDOMINIO FLOAT DEFAULT 0.00,
    ESTADO_END_CONDOMINIO VARCHAR(80),
    BAIRRO_END_CONDOMINIO VARCHAR(80),
    RUA_END_CONDOMINIO VARCHAR(80),
    NUM_END_CONDOMINIO INT,
    
    PRIMARY KEY (COD_CONDOMINIO)
);

CREATE TABLE BLOCO(
	COD_BLOCO INT NOT NULL AUTO_INCREMENT,
    ID_BLOCO VARCHAR(80),
    QTD_PREDIOS_BLOCO INT,
    COD_CONDOMINIO INT NOT NULL,
    
    PRIMARY KEY (COD_BLOCO),
    FOREIGN KEY (COD_CONDOMINIO) REFERENCES CONDOMINIO(COD_CONDOMINIO)
);

CREATE TABLE PREDIO(
	COD_PREDIO INT NOT NULL AUTO_INCREMENT,
    ID_PREDIO VARCHAR(80),
    QTD_APARTAMENTOS_PREDIO INT,
    VAL_MENSALIDADE_PREDIO FLOAT DEFAULT 0.00,
    COD_BLOCO INT NOT NULL,
    
    PRIMARY KEY (COD_PREDIO),
    FOREIGN KEY (COD_BLOCO) REFERENCES BLOCO(COD_BLOCO)
);


CREATE TABLE APARTAMENTO(
	COD_APARTAMENTO INT NOT NULL AUTO_INCREMENT,
    COD_DONO_APARTAMENTO INT,
    COD_PREDIO INT NOT NULL,
    
    PRIMARY KEY (COD_APARTAMENTO),
    FOREIGN KEY (COD_DONO_APARTAMENTO) REFERENCES MORADOR(COD_MORADOR),
    FOREIGN KEY (COD_PREDIO) REFERENCES PREDIO(COD_PREDIO)
);
